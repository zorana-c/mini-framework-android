<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/uiDecorToolsContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/uiDecorToolsBack"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minHeight="@dimen/ui_action_bar_height"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/uiDecorToolsBackIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:tint="@color/colorBackIcon"
            app:srcCompat="@drawable/ic_arrow_white" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/uiDecorToolsBackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/colorBackText"
            android:textSize="14sp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/uiDecorToolsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/ui_action_bar_height"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/uiDecorToolsTitleIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:tint="@color/colorTitleIcon" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/uiDecorToolsTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/colorTitleText"
            android:textSize="16sp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/uiDecorToolsMenu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minHeight="@dimen/ui_action_bar_height"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/uiDecorToolsMenuIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:tint="@color/colorMenuIcon" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/uiDecorToolsMenuText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/colorMenuText"
            android:textSize="14sp" />
    </FrameLayout>

    <View
        android:id="@+id/uiDecorToolsLine"
        style="@style/UIDividerView.Horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@null" />
</androidx.constraintlayout.widget.ConstraintLayout>