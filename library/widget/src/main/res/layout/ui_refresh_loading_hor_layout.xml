<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <com.framework.widget.CircleProgressView
        android:id="@+id/swipeRefreshCircleProgressView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="5dp"
        android:tint="@color/colorProgressText"
        app:layout_constraintBottom_toTopOf="@id/swipeRefreshLoadingTextView"
        app:layout_constraintLeft_toLeftOf="@id/swipeRefreshLoadingTextView"
        app:layout_constraintRight_toRightOf="@id/swipeRefreshLoadingTextView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/swipeRefreshLoadingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minWidth="44dp"
        android:text="Loading"
        android:textColor="@color/colorProgressText"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>