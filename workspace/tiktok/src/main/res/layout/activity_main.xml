<?xml version="1.0" encoding="utf-8"?>
<com.framework.widget.drawer.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <include
        android:id="@+id/pageContainer"
        layout="@layout/layout_content_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.framework.widget.drawer.DrawerItem
        android:id="@+id/leftContainer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:edgeMode="left" />

    <com.framework.widget.drawer.DrawerItem
        android:id="@+id/rightContainer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:edgeMode="right" />

    <com.framework.widget.drawer.DrawerItem
        android:id="@+id/bottomContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:edgeMode="bottom" />
</com.framework.widget.drawer.DrawerLayout>