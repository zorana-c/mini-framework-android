<?xml version="1.0" encoding="utf-8"?>
<com.framework.widget.drawer.NestedFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <com.framework.widget.sliver.SliverViewPager
        android:id="@+id/pageContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:useSmoothScroll="false"
        app:userScrollEnabled="false" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/pageTabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/uiNavigatorBarHeight"
        android:layout_gravity="bottom"
        app:tabIndicator="@null"
        app:tabRippleColor="@null"
        app:tabSelectedTextColor="#ffffffff"
        app:tabTextAppearance="@style/TabTextAppearance"
        app:tabTextColor="#ff999999">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首页" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="朋友" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创作" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我" />
    </com.google.android.material.tabs.TabLayout>
</com.framework.widget.drawer.NestedFrameLayout>